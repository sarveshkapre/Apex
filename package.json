{
  "name": "apex-control-plane",
  "version": "0.1.0",
  "description": "Apex: AI-native IT control plane foundation (P0).",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:api": "tsx watch src/server.ts",
    "dev:web": "npm --prefix web run dev",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "vitest run"
  },
  "keywords": [
    "itam",
    "workflow",
    "asset-graph",
    "rbac"
  ],
  "license": "MIT",
  "dependencies": {
    "express": "^5.2.1",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
